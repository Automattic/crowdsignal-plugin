<?xml version="1.0"?>
<ruleset name="Crowdsignal Plugin Coding Standards">
	<description>WordPress coding standards for Crowdsignal Plugin</description>

	<!-- What to scan -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff codes in all reports, show progress -->
	<arg name="basepath" value="."/> <!-- Strip the file paths down to being relative -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/> <!-- Enables parallel processing for faster results -->
	<arg name="cache" value=".phpcs.cache"/> <!-- Enable caching for faster subsequent runs -->

	<!-- Rules: WordPress Coding Standards -->
	<config name="minimum_supported_wp_version" value="5.5"/>

	<!-- WordPress-Extra Standards (includes WordPress-Core) -->
	<rule ref="WordPress-Extra"/>

	<!-- Best Practices -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="polldaddy"/>
			</property>
		</properties>
	</rule>

	<!-- Allow some flexibility for legacy code -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="polldaddy"/>
				<element value="pd"/>
				<element value="crowdsignal"/>
				<element value="cs"/>
			</property>
		</properties>
	</rule>
</ruleset>