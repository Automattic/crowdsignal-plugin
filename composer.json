{
  "name": "automattic/crowdsignal-plugin",
  "description": "Create and manage Crowdsignal polls and ratings in WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "homepage": "https://crowdsignal.com/",
  "authors": [
    {
      "name": "Automattic, Inc.",
      "homepage": "https://automattic.com/"
    }
  ],
  "support": {
    "issues": "https://github.com/automattic/polldaddy-plugin/issues",
    "source": "https://github.com/automattic/polldaddy-plugin"
  },
  "require": {
    "composer/installers": "^1.0 || ^2.0",
    "php": ">=5.6"
  },
  "require-dev": {
    "yoast/wp-test-utils": "^1.2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Automattic\\Crowdsignal\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "test:standalone": "phpunit --configuration=phpunit-unit.xml --no-coverage"
  },
  "scripts-descriptions": {
    "test": "Run PHPUnit tests",
    "test:unit": "Run unit tests only",
    "test:integration": "Run integration tests only",
    "test:standalone": "Run standalone unit tests without WordPress"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/installers": true
    }
  }
}