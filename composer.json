{
  "name": "automattic/crowdsignal-plugin",
  "description": "Create and manage Crowdsignal polls and ratings in WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "homepage": "https://crowdsignal.com/",
  "authors": [
    {
      "name": "Automattic, Inc.",
      "homepage": "https://automattic.com/"
    }
  ],
  "support": {
    "issues": "https://github.com/automattic/polldaddy-plugin/issues",
    "source": "https://github.com/automattic/polldaddy-plugin"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3.0",
    "php-parallel-lint/php-parallel-lint": "^1.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpunit/phpunit": "^9.6",
    "wp-coding-standards/wpcs": "^3.0",
    "yoast/wp-test-utils": "^1.2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "yoast/phpunit-polyfills": "^1.1.0",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "squizlabs/php_codesniffer": "^3.7",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Crowdsignal\\Plugin\\": "includes/"
    },
    "files": [
      "polldaddy.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Crowdsignal\\Plugin\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "coverage": "phpunit --coverage-html coverage",
    "lint": "vendor/bin/parallel-lint . --exclude vendor --exclude node_modules",
    "lint-ci": "vendor/bin/parallel-lint . --exclude vendor --exclude node_modules --checkstyle",
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "test:coverage": "phpunit --coverage-html coverage",
    "cs": "phpcs",
    "cbf": "phpcbf",
    "phpcs": "phpcs",
    "phpcs:fix": "phpcbf",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpstan:baseline": "phpstan analyse --generate-baseline --memory-limit=1G",
    "fix": "@phpcs:fix",
    "pre-commit": [
      "@lint",
      "@cs",
      "@test:unit"
    ]
  },
  "scripts-descriptions": {
    "coverage": "Generate code coverage report",
    "lint": "Run PHP parallel lint",
    "lint-ci": "Run PHP parallel lint with CI output",
    "test": "Run PHPUnit tests",
    "test:unit": "Run unit tests only",
    "test:integration": "Run integration tests only",
    "test:coverage": "Run tests with coverage report",
    "cs": "Run PHP CodeSniffer",
    "cbf": "Run PHP Code Beautifier",
    "phpcs": "Run PHP Code Sniffer",
    "phpcs:fix": "Fix coding standards issues automatically",
    "phpstan": "Run PHPStan static analysis",
    "fix": "Fix all auto-fixable issues",
    "pre-commit": "Run pre-commit checks"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "apcu-autoloader": true
  },
  "extra": {
    "wordpress-install-dir": "vendor/wordpress/wordpress"
  }
}
