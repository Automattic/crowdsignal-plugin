{
  "$schema": "https://raw.githubusercontent.com/bgrgicak/wp-tester/trunk/packages/config/src/schema.json",
  "projectType": "plugin",
  "environments": [
    {
      "name": "PHP 8.3 + WP Latest",
      "blueprint": {
        "preferredVersions": {
          "php": "8.3",
          "wp": "latest"
        }
      },
      "mounts": [
        {
          "hostPath": ".",
          "vfsPath": "/wordpress/wp-content/plugins/crowdsignal-plugin"
        }
      ],
      "env": {
        "WP_DEBUG": "1",
        "WP_DEBUG_DISPLAY": "1"
      }
    }
  ],
  "tests": {
    "plugin": "crowdsignal-plugin",
    "wp": true,
    "phpunit": {
      "phpunitPath": "vendor/bin/phpunit",
      "configPath": "phpunit.xml.dist",
      "bootstrapPath": "tests/bootstrap.php",
      "testMode": "integration",
      "phpunitArgs": ["--verbose"]
    },
    "passWithNoTests": false
  }
}